<Page
    x:Class="OmegaGo.UI.WindowsUniversal.Infrastructure.AppShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="using:OmegaGo.UI.WindowsUniversal.UserControls"
    xmlns:win2d="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d" RequestedTheme="{x:Bind AppTheme, Mode=OneWay}">

    <Border>
        <Border.Background>
            <SolidColorBrush Color="{x:Bind BackgroundColor, Mode=OneWay}" />
        </Border.Background>
        <Grid>
            <Grid.Background>
                <ImageBrush Opacity="{x:Bind BackgroundOpacity, Mode=OneWay}" ImageSource="{x:Bind BackgroundImageUrl, Mode=OneWay}" Stretch="UniformToFill" />
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Frame Grid.Row="1" x:Name="MainFrame" />
            <StackPanel Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top">
                <ItemsControl ItemsSource="{x:Bind BubbleNotifications, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="1"
                BorderBrush="Black"
                CornerRadius="4"
                                    MaxWidth="600"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Border
                Name="Mask"
                Background="LightBlue"
                CornerRadius="4"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Visibility="{Binding Closeable, Converter={StaticResource VisibilityConverter}}" Tag="{Binding}" Margin="8" Click="CloseNotification_Click">
                                            <FontIcon Glyph="&#xE8BB;" FontSize="10"></FontIcon>
                                        </Button>
                                        <TextBlock Grid.Column="1" TextWrapping="Wrap" Margin="10,0,0,0" Padding="4" Text="{Binding Text, Mode=OneWay}" FontSize="12" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <win2d:CanvasControl Grid.Row="1" Visibility="Collapsed" x:Name="PersistentHolderCanvas"
                   CreateResources="PersistentHolderCanvas_CreateResources"
                UseSharedDevice="True"
                    >
            </win2d:CanvasControl>
            <Grid x:Name="TitleBar"  Visibility="Visible">
                <Grid.Background>
                    <SolidColorBrush Color="{ThemeResource GameColor}" Opacity="0.3" />
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Grid.ColumnSpan="4" x:Name="DraggableTitleBarArea" Background="Transparent">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <BitmapIcon x:Name="PageIcon" Height="20" VerticalAlignment="Center" />
                        <TextBlock Text="omegaGo" FontWeight="Normal" FontSize="14" VerticalAlignment="Center" Margin="10,0,10,0" />
                        <TextBlock x:Name="PageTitle" Text="" FontWeight="Light" Opacity="0.8" VerticalAlignment="Center" FontSize="14" />
                    </StackPanel>
                </Grid>
                <Grid x:Name="BackButtonGrid">
                    <Button Width="48" x:Name="BackButton" Click="TitleBackButton_Click" Margin="0" VerticalAlignment="Stretch" Background="#0000" FontFamily="Segoe MDL2 Assets" Content="&#59179;" Style="{StaticResource TitleBarBackButtonStyle}" />
                </Grid>
                <Button x:Name="FeedbackButton" Grid.Column="2" FontFamily="Segoe MDL2 Assets" Content="&#xE939;" Click="FeedbackButton_OnClick" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed" />
                <Grid Grid.Column="3" x:Name="RightTitleBarMask"/>
            </Grid>
        </Grid>
    </Border>
</Page>
