<views:TransparencyViewBase
    x:Class="OmegaGo.UI.WindowsUniversal.Views.SingleplayerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:OmegaGo.UI.WindowsUniversal.Views"
    xmlns:quests="using:OmegaGo.UI.Services.Quests"
    xmlns:navigation="using:OmegaGo.UI.WindowsUniversal.UserControls.Navigation"
    x:Name="SingleplayerViewLayout"
    Loaded="TransparencyViewBase_Loaded"
    mc:Ignorable="d">


    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <ContinuumNavigationTransitionInfo />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <navigation:TitleControl Text="{x:Bind Localizer.SingleplayerMenu}" HorizontalAlignment="Center"></navigation:TitleControl>

                <Button Content="{x:Bind Localizer.Tutorial}" Command="{Binding Path=GoToTutorial}"
                        Margin="0,20,0,0" MaxWidth="300" HorizontalAlignment="Stretch" />
                <Button Content="{x:Bind Localizer.SolvePuzzles}" Command="{Binding Path=GoToTsumegoMenu}"
                        Margin="0,20,0,0" MaxWidth="300" HorizontalAlignment="Stretch" />
                <Button Content="{x:Bind Localizer.PlayAgainstAI}" Command="{Binding Path=GoToLocalGame}"
                        Margin="0,20,0,0" MaxWidth="300" HorizontalAlignment="Stretch" />
                <Button Content="{x:Bind Localizer.Statistics}" Command="{Binding Path=GoToStatistics}"
                        Margin="0,20,0,0" MaxWidth="300" HorizontalAlignment="Stretch" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{x:Bind Localizer.PointsColon}" FontSize="26" Margin="0,0,10,0"></TextBlock>
                    <TextBlock Text="{Binding Points}" FontSize="26" FontWeight="Bold"></TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{x:Bind Localizer.OmegaGoRankColon}" FontSize="26" Margin="0,0,10,0"></TextBlock>
                    <TextBlock Text="{Binding Rank}" FontSize="26" FontWeight="Bold"></TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{x:Bind Localizer.NextRankAtColon}" FontSize="26" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding NextRankPoints}" FontSize="26" FontWeight="Bold"/>
                </StackPanel>

                <TextBlock Text="{x:Bind Localizer.Quests}" Margin="0,20,0,0" HorizontalAlignment="Center" FontSize="26"/>
                <GridView SelectionMode="None" IsItemClickEnabled="True" HorizontalAlignment="Center" 
                          ItemsSource="{Binding ActiveQuests}">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="quests:ActiveQuest">
                            <Border Background="Wheat" BorderBrush="Blue" BorderThickness="1" Width="300" Height="250">
                                <StackPanel>
                                    <TextBlock TextAlignment="Center" Text="{Binding Quest.Name}" 
                                               Foreground="Black" FontSize="28" TextWrapping="Wrap" />
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock  FontSize="22" Margin="0,0,10,0" Text="{Binding ElementName=SingleplayerViewLayout, Path=Localizer.RewardColon}" />
                                        <TextBlock  Text="{Binding Quest.PointReward}"
                                                    FontWeight="Bold" Foreground="Black" FontSize="22" />
                                    </StackPanel>
                                    <TextBlock  Text="{Binding Quest.Description}" Margin="0,10,0,0" TextAlignment="Center"
                                                FontSize="18" TextWrapping="Wrap" />
                                    <ProgressBar Minimum="0" Maximum="{Binding Quest.MaximumProgress}" 
                                                 Value="{Binding Progress}" Height="20" Margin="0,10,0,0" />
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Progress}" />
                                        <TextBlock Text="/" />
                                        <TextBlock Text="{Binding Quest.MaximumProgress}" />
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <Button Visibility="{Binding Quest.TryThisNowButtonVisible, Converter={StaticResource VisibilityConverter}}" Tag="{Binding}"
                                                Click="TryThisNow_Click" ToolTipService.ToolTip="{Binding ElementName=SingleplayerViewLayout, Path=Localizer.Quest_TryThisNowTooltip}">
                                            <StackPanel Orientation="Vertical">
                                                <FontIcon Glyph="&#xE768;"/>
                                                <TextBlock Text="{Binding ElementName=SingleplayerViewLayout, Path=Localizer.Quest_TryThisNow}"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Visibility="{Binding ElementName=SingleplayerViewLayout, Path=VM.ExchangeIsPossible, Converter={StaticResource VisibilityConverter}, Mode=OneWay}" Tag="{Binding}"
                                                Click="ExchangeQuest_Click" ToolTipService.ToolTip="{Binding ElementName=SingleplayerViewLayout, Path=Localizer.Quest_ReplaceTooltip}">
                                            <StackPanel Orientation="Vertical">
                                                <FontIcon Glyph="&#xE72C;"/>
                                                <TextBlock Text="{Binding ElementName=SingleplayerViewLayout, Path=Localizer.Quest_Replace}"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                    <!-- A grid view maybe won't work... we need larger LastViewItems -->
                    <quests:ExampleActiveQuest />
                    <quests:ExampleActiveQuest />
                </GridView>
                <TextBlock Text="{x:Bind Localizer.QuestsFooter}" HorizontalAlignment="Center" Margin="0,0,0,20" TextWrapping="Wrap"></TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</views:TransparencyViewBase>
