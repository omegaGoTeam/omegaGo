<views:ViewBase
    x:Class="OmegaGo.UI.WindowsUniversal.Views.TutorialView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:OmegaGo.UI.WindowsUniversal.Views"
    xmlns:controls="using:OmegaGo.UI.WindowsUniversal.UserControls"
    x:Name="TutorialViewPage"
    xmlns:win2d="using:Microsoft.Graphics.Canvas.UI.Xaml"
    KeyUp="TutorialView_KeyUp"
    Loaded="TutorialViewPage_Loaded"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <ContinuumNavigationTransitionInfo />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <controls:BoardControl  ViewModel="{x:Bind Path=VM.BoardViewModel, Mode=OneWay}"
                                HorizontalAlignment="Stretch"
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                VerticalAlignment="Stretch"/>


        <Border BorderThickness="2"
                BorderBrush="Black"
                CornerRadius="20"
                Width="600"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Grid.Row="0"
                Grid.Column="0"
                Height="200">
            <Grid>
                <Border
                Background="LightBlue"
                CornerRadius="20"/>
                <StackPanel>
                    <TextBlock FontSize="26" Margin="20, 20, 0, 0">Sensei speaks:</TextBlock>
                    <TextBlock FontSize="20" Margin="20, 5,20,20" Text="{x:Bind Mode=OneWay, Path=VM.Scenario.CurrentLine.Line}"
                               TextWrapping="Wrap"
                               />
                </StackPanel>
                <Button 
                    Name="ButtonNext"
                    Content="{x:Bind Mode=OneWay, Path=VM.Scenario.CurrentLine.NextButtonText}"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="Next_Click"></Button>
            </Grid>
        </Border>
        <Border BorderThickness="2"
                BorderBrush="Black"
                CornerRadius="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="10,10,0,0"
                Visibility="Collapsed"
                Grid.Row="0"
                Grid.Column="1"
                Height="100">
            <Grid>
                <Border
                Background="LightBlue"
                CornerRadius="10"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30">
                    You are doing fine, player.
                </TextBlock>
            </Grid>
        </Border>
        <Border BorderThickness="2"
                BorderBrush="Black"
                CornerRadius="20"
                Width="800"
                Name="MakeYourChoiceDialog"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Height="400">
            <!-- Visibility="Collapsed"-->

            <Grid>
                <Border
                Name="mask"
                Background="LightBlue"
                CornerRadius="20"/>
                <StackPanel HorizontalAlignment="Center" Margin="20">
                    <TextBlock FontSize="26" HorizontalAlignment="Center">Make Your Choice:</TextBlock>
                    <Button Name="Option1" Click="Option1_Click" HorizontalAlignment="Stretch" FontSize="26" Padding="50,10,50,10" Margin="20">
                        <TextBlock Name="Option1Text" TextWrapping="Wrap">
                            I choose option 1
                        </TextBlock>
                    </Button>
                    <Button Name="Option2" Click="Option2_Click" HorizontalAlignment="Stretch" FontSize="26" Padding="50,10,50,10" Margin="20">
                        <TextBlock Name="Option2Text" TextWrapping="Wrap">
                            I choose option 2
                        </TextBlock>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</views:ViewBase>
