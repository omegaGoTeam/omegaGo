<views:ViewBase
    x:Class="OmegaGo.UI.WindowsUniversal.Views.MainMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:OmegaGo.UI.WindowsUniversal.Views"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <ContinuumNavigationTransitionInfo />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Border>
        <Border.Background>
            <ImageBrush ImageSource="/Assets/MainMenu/backgroundimage.jpg" Stretch="UniformToFill" />
        </Border.Background>
        <Grid Background="#AAFDD270">
            <TextBlock 
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"              
                   Style="{ThemeResource HeaderTextBlockStyle}">
                <Run>omega</Run><Run FontWeight="SemiBold">Go</Run>
            </TextBlock>
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">

                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="0,10,0,0" />
                    </Style>
                </StackPanel.Resources>
                <Button Content="{x:Bind Localizer.Tutorial}"                     
                    Command="{Binding Path=NavigateToTutorial}"
                    ToolTipService.ToolTip="{x:Bind Localizer.TutorialToolTip}"
                    HorizontalAlignment="Stretch" />
                <Button Content="{x:Bind Localizer.Singleplayer}" 
                    Command="{Binding Path=NavigateToSingleplayer}"
                    ToolTipService.ToolTip="{x:Bind Localizer.SingleplayerToolTip}"
                    HorizontalAlignment="Stretch" />
                <Button Content="{x:Bind Localizer.LocalGame}" 
                    Command="{Binding Path=NavigateToGameCreation}"
                    ToolTipService.ToolTip="{x:Bind Localizer.LocalGameToolTip}"
                    HorizontalAlignment="Stretch" />
                <Button Content="{x:Bind Localizer.OnlineGame}" 
                    Command="{Binding Path=NavigateToMultiplayerDashboard}"
                    ToolTipService.ToolTip="{x:Bind Localizer.OnlineGameToolTip}"
                    HorizontalAlignment="Stretch" />
                <Button Content="{x:Bind Localizer.GameLibrary}"
                    Command="{Binding Path=NavigateToLibrary}"
                    ToolTipService.ToolTip="{x:Bind Localizer.GameLibraryToolTip}"
                    HorizontalAlignment="Stretch"/>
                <Button Content="{x:Bind Localizer.Statistics}" 
                    Command="{Binding Path=NavigateToStatistics}"
                    ToolTipService.ToolTip="{x:Bind Localizer.StatisticsToolTip}"
                    HorizontalAlignment="Stretch" />
                <Button Content="{x:Bind Localizer.Settings}" 
                    Command="{Binding Path=NavigateToSettings}"
                    ToolTipService.ToolTip="{x:Bind Localizer.SettingsToolTip}"
                    HorizontalAlignment="Stretch" />
                <Button Content="{x:Bind Localizer.Help}" 
                    Command="{Binding Path=NavigateToHelp}"
                    ToolTipService.ToolTip="{x:Bind Localizer.HelpToolTip}"
                    HorizontalAlignment="Stretch" />
            </StackPanel>

            <!--<StackPanel HorizontalAlignment="Left"
                    VerticalAlignment="Bottom">
                <RichTextBlock>
                </RichTextBlock>
                <Button Content="{x:Bind Localizer.Tips}" 
                    ToolTipService.ToolTip="{x:Bind Localizer.TipsToolTip}"
                    Click="ShowHideTips_Click"
                     />
            </StackPanel>-->

            <Button VerticalAlignment="Top" ToolTipService.ToolTip="{x:Bind Localizer.ToggleFullscreenTooltip}" HorizontalAlignment="Right" Click="GoFullScreen_Click" Margin="12">
                <FontIcon Glyph="&#xE1D9;" />
            </Button>
            
            <StackPanel Margin="12" VerticalAlignment="Bottom" HorizontalAlignment="Left" Orientation="Horizontal">
                <Button>
                    <FontIcon Glyph="&#xE8C1;" />
                    <Button.Flyout>
                        <MenuFlyout>
                            <ToggleMenuFlyoutItem Text="Auto" IsChecked="True" />
                            <ToggleMenuFlyoutItem Text="English" IsChecked="False" />
                            <ToggleMenuFlyoutItem Text="Česky" IsChecked="False" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>

                <Button Margin="12,0,0,0">
                    <FontIcon Glyph="&#xE994;" />
                </Button>
            </StackPanel>

            <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
                <Button Content="{x:Bind Localizer.Credits}" 
                    Command="{Binding Path=NavigateToAbout}"
                    ToolTipService.ToolTip="{x:Bind Localizer.CreditsToolTip}"
                    Margin="0,0,20,0"
                    HorizontalAlignment="Stretch" />
                <FontIcon Glyph="&#x1f431;&#x200d;&#127949;" 
                  FontFamily="Segoe UI Emoji"
                  FontSize="26"/>
            </StackPanel>
        </Grid>
    </Border>
</views:ViewBase>



