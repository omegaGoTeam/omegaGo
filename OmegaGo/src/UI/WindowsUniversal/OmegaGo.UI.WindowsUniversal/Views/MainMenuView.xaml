<views:ViewBase
    x:Class="OmegaGo.UI.WindowsUniversal.Views.MainMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:OmegaGo.UI.WindowsUniversal.Views"
    mc:Ignorable="d">
    
    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock Text="omegaGo" 
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"
                   Style="{ThemeResource HeaderTextBlockStyle}" />
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center">

            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0,10,0,0" />
                </Style>
            </StackPanel.Resources>
            
            <Button Content="Tutorial" 
                    Command="{Binding Path=NavigateToTutorial}"
                    HorizontalAlignment="Stretch" />
            <Button Content="Singleplayer" 
                    Command="{Binding Path=NavigateToSingleplayer}"
                    HorizontalAlignment="Stretch" />
            <Button Content="Multiplayer" 
                    Command="{Binding Path=NavigateToMultiplayerDashboard}"
                    HorizontalAlignment="Stretch" />
            <Button Content="Library"
                    Command="{Binding Path=NavigateToLibrary}"
                    HorizontalAlignment="Stretch"/>
            <Button Content="Settings" 
                    Command="{Binding Path=NavigateToSettings}"
                    HorizontalAlignment="Stretch" />
            <Button Content="About" 
                    Command="{Binding Path=NavigateToAbout}"
                    HorizontalAlignment="Stretch" />
        </StackPanel>

        <FontIcon Glyph="&#x1f431;&#x200d;&#127949;" 
                  FontFamily="Segoe UI Emoji"
                  FontSize="26"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Bottom" />
    </Grid>
</views:ViewBase>



