<views:TransparencyViewBase
    x:Class="OmegaGo.UI.WindowsUniversal.Views.LibraryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:OmegaGo.UI.WindowsUniversal.Views"
    xmlns:navigation="using:OmegaGo.UI.WindowsUniversal.UserControls.Navigation"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:actions="using:OmegaGo.UI.WindowsUniversal.Behaviors.Actions"
    xmlns:library="using:OmegaGo.UI.Models.Library"
    x:Name="MainView"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <ContinuumNavigationTransitionInfo />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <DataTemplate x:DataType="library:LibraryItemViewModel" x:Key="LargeLibraryItemTemplate">
            <Border Width="300" Height="300" Padding="12">
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Tapped">
                        <actions:OpenAttachedFlyoutAction />
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
                <Border.ContextFlyout>
                    <Flyout Placement="Bottom">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <AppBarButton Icon="Delete" IsCompact="False" Label="{Binding Source={StaticResource Localizer}, Path=Delete}" Command="{Binding ElementName=MainView, Path=VM.DeleteItemCommand}"  />
                                <AppBarButton Label="{Binding Source={StaticResource Localizer}, Path=Export}" Command="{Binding ElementName=MainView, Path=VM.ExportItemCommand}">
                                    <BitmapIcon UriSource="/Assets/Icons/Commands/ExportFromLibrary.png" />
                                </AppBarButton>
                            </StackPanel>
                        </Grid>
                    </Flyout>
                </Border.ContextFlyout>
                <Border.Background>
                    <SolidColorBrush Color="{Binding Source={StaticResource VisualSettings}, Path=BackgroundColor}" Opacity="{StaticResource PagePanelOpacity}" />
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="{x:Bind FileName}" FontWeight="SemiBold" HorizontalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}" TextAlignment="Center" MaxLines="1" TextTrimming="CharacterEllipsis" Margin="0,0,0,12" />
                    <FlipView Grid.Row="1" ItemsSource="{x:Bind Games}" SelectedItem="{Binding SelectedGame, Mode=TwoWay}">
                        <FlipView.ItemTemplate>
                            <DataTemplate x:DataType="library:LibraryItemGame">
                                <Grid Background="#33000000" Padding="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Ellipse Stroke="Black" Width="16" Height="16" Margin="0,0,0,0">
                                            <Ellipse.Fill>
                                                <LinearGradientBrush StartPoint="0.2,.2" EndPoint="1,1">
                                                    <GradientStop Color="White" Offset="0.0" />
                                                    <GradientStop Color="DimGray" Offset="1.5" />
                                                </LinearGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock VerticalAlignment="Center" Text="{x:Bind WhiteName, Mode=OneWay}" Margin="8,0,0,0" FontWeight="SemiBold" />
                                        <TextBlock VerticalAlignment="Center" Text="{x:Bind WhiteRank, Mode=OneWay}" Margin="8,0,0,0" FontWeight="Normal" Opacity="0.5" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" x:Name="BlackPlayerInfo">
                                        <Ellipse Stroke="Black" Width="16" Height="16" Margin="0,0,0,0">
                                            <Ellipse.Fill>
                                                <LinearGradientBrush StartPoint="0.2,.2" EndPoint="1,1">
                                                    <GradientStop Color="DimGray" Offset="0.0" />
                                                    <GradientStop Color="Black" Offset="1.5" />
                                                </LinearGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock VerticalAlignment="Center" Text="{x:Bind BlackName, Mode=OneWay}" Margin="8,0,0,0" FontWeight="SemiBold" />
                                        <TextBlock VerticalAlignment="Center" Text="{x:Bind BlackRank, Mode=OneWay}" Margin="8,0,0,0" FontWeight="Normal" Opacity="0.5" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Row="2">
                                        <TextBlock Text="{Binding Localizer.MovesColon, ElementName=MainView}" Padding="0,0,10,0"></TextBlock>
                                        <TextBlock Text="{Binding MoveCount}" FontWeight="Bold" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Grid.Row="2">
                                        <TextBlock Text="{Binding Localizer.DateColon, ElementName=MainView}" Padding="0,0,10,0"></TextBlock>
                                        <TextBlock Text="{Binding Date}" FontWeight="Bold" />
                                    </StackPanel>
                                    <TextBlock Text="{Binding Comment}" Grid.Row="3" />
                                    <AppBarButton Grid.Row="4" Icon="OpenFile" IsCompact="False" Label="{Binding Source={StaticResource Localizer}, Path=Open}" Command="{Binding ElementName=MainView, Path=VM.OpenItemCommand}" />
                                </Grid>
                            </DataTemplate>
                        </FlipView.ItemTemplate>
                    </FlipView>

                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TopCommandPanel.Visibility" Value="Visible" />
                        <Setter Target="BottomCommandBar.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TopCommandPanel.Visibility" Value="Collapsed" />
                        <Setter Target="BottomCommandBar.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <navigation:TitleControl HorizontalAlignment="Center"
                   Grid.Row="0"
                   Text="{x:Bind Localizer.GameLibrary}"
                   Margin="0,12,0,0" />
        <StackPanel x:Name="TopCommandPanel" Visibility="Collapsed"  Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="8">
            <Button Command="{x:Bind VM.OpenSgfFileCommand}">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Symbol="OpenFile" />
                    <TextBlock Margin="8,0,0,0" Text="{x:Bind Localizer.OpenSgfFile}" />
                </StackPanel>
            </Button>
            <Button Margin="8,0,0,0" Command="{x:Bind VM.ImportSgfFileCommand}">
                <StackPanel Orientation="Horizontal">
                    <BitmapIcon UriSource="/Assets/Icons/Commands/ImportToLibrary.png" />
                    <TextBlock Margin="8,0,0,0" Text="{x:Bind Localizer.ImportSgfFile}" />
                </StackPanel>
            </Button>
            <Button Command="{x:Bind Path=VM.RefreshCommand}" Margin="8,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Symbol="Refresh" />
                    <TextBlock Margin="8,0,0,0" Text="{x:Bind Localizer.Refresh}" />
                </StackPanel>
            </Button>
            <Button Command="{x:Bind Path=VM.OpenLibraryInExplorerCommand}" Margin="8,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xED43;" />
                    <TextBlock Margin="8,0,0,0" Text="{x:Bind Localizer.OpenLibraryInExplorer}" />
                </StackPanel>
            </Button>
        </StackPanel>

        <GridView x:Name="GameListView" IsItemClickEnabled="True" SelectionMode="None"
                  Grid.Row="2"
                  ItemsSource="{x:Bind Path=VM.LibraryItems, Mode=OneWay}" ItemTemplate="{StaticResource LargeLibraryItemTemplate}" />

        <CommandBar x:Name="BottomCommandBar" Grid.Row="3" IsDynamicOverflowEnabled="True">
            <AppBarButton Command="{x:Bind VM.OpenSgfFileCommand}" Label="{x:Bind Localizer.OpenSgfFile}" Icon="OpenFile" />
            <AppBarButton Command="{x:Bind VM.ImportSgfFileCommand}" Label="{x:Bind Localizer.ImportSgfFile}">
                <BitmapIcon UriSource="/Assets/Icons/Commands/ImportToLibrary.png" />
            </AppBarButton>
            <AppBarButton Icon="Refresh" Label="{x:Bind Localizer.Refresh}" Command="{x:Bind VM.RefreshCommand}" />
            <AppBarButton Command="{x:Bind Path=VM.OpenLibraryInExplorerCommand}" Label="{x:Bind Localizer.OpenLibraryInExplorer}">
                <FontIcon Glyph="&#xED43;" />
            </AppBarButton>
        </CommandBar>

        <Border Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="{x:Bind VM.IsWorking, Mode=OneWay, Converter={StaticResource VisibilityConverter}}" Grid.RowSpan="4">
            <Border.Background>
                <SolidColorBrush Color="{Binding Source={StaticResource VisualSettings}, Path=BackgroundColor}" Opacity="{ThemeResource LoadingViewOpacity}" />
            </Border.Background>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressRing Width="50" Height="50" IsActive="{x:Bind VM.IsWorking, Mode=OneWay}" HorizontalAlignment="Center" />
                <TextBlock Text="{x:Bind VM.LoadingText, Mode=OneWay}" Margin="12" HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</views:TransparencyViewBase>
