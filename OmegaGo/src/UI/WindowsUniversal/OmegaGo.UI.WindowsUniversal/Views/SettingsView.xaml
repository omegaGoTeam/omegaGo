<views:ViewBase
    x:Class="OmegaGo.UI.WindowsUniversal.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:OmegaGo.UI.WindowsUniversal.Views"
    xmlns:system="using:System"
    mc:Ignorable="d">
    
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <ContinuumNavigationTransitionInfo />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Pivot Title="{x:Bind Localizer.Settings}">
        <Pivot.TitleTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding}" FontSize="34" FontWeight="Light" />
            </DataTemplate>
        </Pivot.TitleTemplate>
        <PivotItem Header="{x:Bind Localizer.UserInterface}">
            <StackPanel Padding="15">
                <TextBlock Text="Board" Style="{ThemeResource SubtitleTextBlockStyle}" />
                <ComboBox SelectedIndex="0" Width="140">
                    <x:String>Kaya Wood</x:String>
                </ComboBox>

                <TextBlock Text="Black Stones" Style="{ThemeResource SubtitleTextBlockStyle}" />
                <ComboBox SelectedIndex="0" Width="140">
                    <x:String>Metal</x:String>
                </ComboBox>
                
                <TextBlock Text="White Stones" Style="{ThemeResource SubtitleTextBlockStyle}" />
                <ComboBox SelectedIndex="0" Width="140">
                    <x:String>Plastic</x:String>
                </ComboBox>

                <CheckBox Content="Highlight Last Move" />
                <CheckBox Content="Highlight Captures" />
                <CheckBox Content="Highlight Komores" />
                <CheckBox Content="Natural Board Placement" />
            </StackPanel>
        </PivotItem>
        <PivotItem Header="Sounds">
            <StackPanel Padding="15">
                <TextBlock Text="Master Volume" Style="{ThemeResource SubtitleTextBlockStyle}" />
                <Slider Width="100" HorizontalAlignment="Left" />

                <TextBlock Text="SFX Volume" Style="{ThemeResource SubtitleTextBlockStyle}" />
                <Slider Width="100" HorizontalAlignment="Left" />
                
                <TextBlock Text="Music Volume" Style="{ThemeResource SubtitleTextBlockStyle}" />
                <Slider Width="100" HorizontalAlignment="Left" />
            </StackPanel>
        </PivotItem>
        <PivotItem Header="Language">
            <StackPanel Padding="15">
                <TextBlock Text="Language" Style="{ThemeResource SubtitleTextBlockStyle}" />
                <ComboBox Width="140" ItemsSource="{x:Bind VM.Languages}" SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="system:String">
                            <TextBlock Text="{x:Bind Converter={StaticResource LocalizingConverter}}"></TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </PivotItem>
        <PivotItem Header="Assistant">
            <StackPanel Padding="15">
                <TextBlock Text="AI Program" Style="{ThemeResource SubtitleTextBlockStyle}" />
                <ComboBox SelectedIndex="0" Width="140">
                    <x:String>Joken23</x:String>
                </ComboBox>

                <TextBlock Text="Strength" Style="{ThemeResource SubtitleTextBlockStyle}" />
                <ComboBox SelectedIndex="0" Width="140">
                    <x:String>10</x:String>
                </ComboBox>

                <CheckBox Content="Enable Hints" />
                <CheckBox Content="Enable Territory Estimation" />
                <CheckBox Content="Enable Even In Online Games" />
            </StackPanel>
        </PivotItem>
    </Pivot>    
</views:ViewBase>
