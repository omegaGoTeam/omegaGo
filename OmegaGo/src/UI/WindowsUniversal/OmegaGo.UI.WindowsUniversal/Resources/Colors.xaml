<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <x:Double x:Key="LoadingViewOpacity">0.4</x:Double>
    <x:Double x:Key="PagePanelOpacity">0.8</x:Double>
    
    <Color x:Key="GameColor">#FDD270</Color>
    <SolidColorBrush x:Key="GameColorBrush" Color="{ThemeResource GameColor}" />
    
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <Color x:Key="DefaultTabColor">#00FF0000</Color>
            <Color x:Key="TabNotificationColor">OrangeRed</Color>
            <Color x:Key="OverlayPanelColor">#22000000</Color>
            <SolidColorBrush Color="{ThemeResource OverlayPanelColor}" x:Key="OverlayPanelBrush" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <Color x:Key="DefaultTabColor">#00FF0000</Color>
            <Color x:Key="TabNotificationColor">OrangeRed</Color>
            <Color x:Key="OverlayPanelColor">#22FFFFFF</Color>
            <SolidColorBrush Color="{ThemeResource OverlayPanelColor}" x:Key="OverlayPanelBrush" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
